---
// import Button from "./Button.astro";
// Har man en component i en component, som en button i et card, så importerer man blot button til card

const { titel, beskrivelse, deluxe, tidoverskrift, tid, kobnu, kobnupris, naestebud, naestebudpris, vurdering, vurderingpris, kubkassen, sidstechance, hammerslag, nyproduceret, produktimg } = Astro.props;
import "../styles/global.css";
---


<!-- Hvis man skal "togle" mellem deluxe eller ikke deluxe og skal man give sine  cards flere værdier kan man skrive data-atribut -->
<article class:list={[{deluxe}, {kobnu}, {kubkassen}, {sidstechance}, {naestebud}, {vurdering}, {hammerslag}, {nyproduceret}, {produktimg}]}>
<!-- Billede til card -->
 <!-- <img src="/img/placeholder.jpg" alt="" /> -->

<div class="productcard">
   
          <div class="cardbillede">
                 <p >
                    {produktimg == true && (
                        <img src="/img/ringbillede.svg" alt="produktbillede">
                    )}
                </p>
          </div>
                 
              
     <div class="titel">          
          <!-- Titel på card -->
          <h3>{titel}</h3>
     </div>   
        
         <!-- Blåt banner -->
         
            
<div class="ikoner" id="ikongrid">
            
                <p>
                    {hammerslag == true && (
                        <img src="/img/hammer.svg" alt="køb nu">
                    )}
                </p>
                <p>
                    {deluxe == true && (
                        <img src="/img/diamant.svg" alt="deluxvare">
                    )}
                </p>
                <p>
                    {kubkassen == true && (
                        <img src="/img/pricetag.svg" alt="kubkassen">
                    )}
                </p>
                <p>
                    {sidstechance == true && (
                        <img src="/img/udråb.svg" alt="sidste chance">
                    )}
                </p>
</div>
    
    
    <div class="ny">
        <p>{nyproduceret}</p>
        </div>
    
    
        <div class="udloeb" id="udloebstid">
        <p>{tidoverskrift}</p>
       <p>{tid}</p> 
     </div>
    
    <div class="bud" id="budpris">
        <p>
            {kobnu == true && (
                <strong>Køb nu: </strong>
                <span>{kobnupris}</span>
            )}
        </p>
        <p>
            {naestebud == true && (
            <strong>Næste bud: </strong>
            <span>{naestebudpris}</span>
            )}
        </p>
        
        <p>
            {vurdering == true && (
            <strong>Vurdering: </strong>
            <span>{vurderingpris}</span>
            )}
        </p>
        
     </div>
     <!-- Beskrivelse af vare -->
 <div class="beskriv"> <p>{beskrivelse}</p></div>
</div>


  <!-- Hvis man skal "togle" mellem deluxe eller ikke deluxe -->
  <!-- {deluxe == true && (

  )} -->
</article>
<style>

    img{
        width: 100%;
       
    }
    .productcard{
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: repeat(5, 1fr);
        
        background-color: aqua;
        
    }
    .cardbillede{
        display: grid;
         grid-column: 1/3;
         grid-row: 1/6;
         object-fit: cover;
    }

    .titel {
        grid-row: 1/2;
grid-column: 3/5;

    }
    .ikoner{
        grid-column: 5/6;
    }

    #ikongrid{
        display:flex;
        flex-direction: row;
        gap: 1rem;
    
    }
    .ny{
        grid-column: 5/6;
        grid-row:2/3;
    }
    .udloeb{
         grid-column: 3/6;
        grid-row:3/4;
    }

    #udloebstid{
         display:flex;
        flex-direction: row;
        gap: 1rem;
    }
    
    .bud {
         grid-row:4/5;
         grid-column:3/6;
    }

    #budpris{
         display:flex;
        flex-direction: row;
        gap: 1rem;
    }

    .beskriv{
 grid-row:5/6;
         grid-column:3/6;
}

    

    </style>